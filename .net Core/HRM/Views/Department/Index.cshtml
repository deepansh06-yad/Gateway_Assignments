@model IEnumerable<HRM.Models.DepartmentsModel>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/style.css" rel="stylesheet" />
<p>
    <a href="@Url.Action("AddorEdit","Department")" class="btn btn-default"><i class="fa fa-plus"></i>Add Department</a>
</p>
<fieldset>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
  @foreach (var item in Model)
   {
    <tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Department)
    </td>
    <td>
        <a href="@Url.Action("AddorEdit","Department",new { id=item.Id})" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a>

        @Html.ActionLink("Delete", "Deletedepartment", new { id = item.Id })
    </td>
    </tr>}
        </tbody>
    </table>
</fieldset>
